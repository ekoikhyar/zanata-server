<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:fui="urn:import:org.zanata.webtrans.client.ui">

  <ui:style>
    .editor {
      background-color: #ffffff;
      border-bottom: 1px solid #E5E5E5;
    }

    .topBar {
      border-bottom: 1px solid lightGrey;
    }

  </ui:style>

  <g:LayoutPanel styleName="translatorEditorContainer">
    <g:layer top="0" height="2.5em">
      <g:HTMLPanel styleName="new-zanata">
        <ul class="list--horizontal {style.topBar}">
          <li>
            <g:HTMLPanel ui:field="filterPanelContainer" />
          </li>
          <li class="l--float-right">
            <g:Anchor ui:field="refreshCurrentPage"
              styleName="icon-arrows-cw" />
          </li>
          <li class="l--float-right">
            <g:HTMLPanel ui:field="transUnitNavigationContainer" />
          </li>
        </ul>
      </g:HTMLPanel>
    </g:layer>
    <g:layer top="3em" bottom="2.5em">
      <g:LayoutPanel ui:field="editor" styleName="{style.editor}" />
    </g:layer>
    <g:layer bottom="0px" height="2.5em" left="0" right="0">
      <fui:Pager ui:field="pager" />
    </g:layer>
    <g:layer bottom="0px" height="24px" right="0" width="24px">
      <g:Anchor ui:field="resize" />
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>
