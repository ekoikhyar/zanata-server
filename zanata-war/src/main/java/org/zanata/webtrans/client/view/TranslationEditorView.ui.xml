
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui"
  xmlns:fui="urn:import:org.zanata.webtrans.client.ui">

  <ui:style>
    .editor {
      background-color: #ffffff;
      border-bottom: 1px solid #E5E5E5;
    }

    .topBar {
      border-bottom: 1px solid lightGrey;
    }

    .right-refresh {
      position: absolute;
      right: 0;
      top: 0.6em;
    }

    .right-nav {
      position: absolute;
      right: 3em;
      top: 0.5em;
    }

    .toggle-south-button {
      font-size: 1.5em;
      line-height: 1.625em;
      cursor: pointer;
      color: #4E4E4E;
    }

    .toggle-south-button:hover {
      color: #0085CC;
    }

  </ui:style>

  <g:LayoutPanel styleName="translatorEditorContainer">
    <g:layer top="0" height="2.5em">
      <g:HTMLPanel styleName="new-zanata">
        <ul class="list--horizontal {style.topBar}">
          <li>
            <g:HTMLPanel ui:field="filterPanelContainer" />
          </li>
          <li class="{style.right-nav}">
            <g:HTMLPanel ui:field="transUnitNavigationContainer" />
          </li>
          <li class="{style.right-refresh}">
            <g:Anchor ui:field="refreshCurrentPage"
              styleName="icon-arrows-cw gamma" />
          </li>
        </ul>
      </g:HTMLPanel>
    </g:layer>
    <g:layer top="3em" bottom="2.5em">
      <g:LayoutPanel ui:field="editor" styleName="{style.editor}" />
    </g:layer>
    <g:layer bottom="0px" height="2.5em" left="0" right="0">
      <fui:Pager ui:field="pager" />
    </g:layer>
    <g:layer bottom="0px" height="24px" right="0" width="24px">
      <g:Anchor ui:field="resize" styleName="{style.toggle-south-button}" />
    </g:layer>
  </g:LayoutPanel>
</ui:UiBinder>
