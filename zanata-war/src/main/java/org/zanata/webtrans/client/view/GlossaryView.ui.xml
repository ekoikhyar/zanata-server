<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
  xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="messages"
    type="org.zanata.webtrans.client.resources.UiMessages" />

  <ui:style>
    .container {
      overflow: auto;
    }
  </ui:style>

  <g:HTMLPanel styleName="{style.container}">
    <ul class="list--horizontal l--push-h-half">
      <li class="epsilon">
        <ui:text from="{messages.glossaryHeading}" />
      </li>
      <li>
        <g:TextBox ui:field="glossaryTextBox" />
      </li>
      <li>
        <g:ValueListBox ui:field="searchType" />
      </li>
      <li>
        <g:Button ui:field="searchButton">
          <ui:text from="{messages.searchButtonLabel}" />
        </g:Button>
      </li>
      <li>
        <g:Button ui:field="clearButton">
          <ui:text from="{messages.clearButtonLabel}" />
        </g:Button>
      </li>
    </ul>

    <g:HTMLPanel ui:field="data" />

  </g:HTMLPanel>
</ui:UiBinder>
